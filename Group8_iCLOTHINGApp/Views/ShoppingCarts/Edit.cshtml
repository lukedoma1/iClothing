@model Group8_iCLOTHINGApp.Models.ShoppingCart

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-bottom:30px; margin-left:50px;">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.cartID)
        @Html.HiddenFor(model => model.cartProductPrice)
        @Html.HiddenFor(model => model.cartProductID)

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.cartProductQty, new { htmlAttributes = new { @class = "form-control mx-auto " } })
                @Html.ValidationMessageFor(model => model.cartProductQty, "", new { @class = "text-danger mx-auto" })
            </div>
        </div>
    </div>
    <div class="text-center">
        <input type="submit" value="Save" class="btn btn-outline-dark btn" />
        @Html.ActionLink("Back to Shopping Cart", "Index", null, new { @class = "btn btn-outline-dark" })
    </div>

}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
