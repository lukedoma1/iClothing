

@model Group8_iCLOTHINGApp.Models.UserQuery

@{
    ViewBag.Title = "Create";
}

@{
    Layout = "~/Views/Shared/SignedInLayout.cshtml";
}

<div class="text-center mb-4 ">
    <h2>Ask a Question</h2>

    <p>Drop your question down below, and we will get back to you as soon as possible!</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group mb-4 ">
            @Html.TextAreaFor(model => model.queryDescription, new { @class = "form-control mx-auto d-block ", rows = 5 })
            @Html.ValidationMessageFor(model => model.queryDescription, "", new { @class = "text-danger" })
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <button type="submit" class="btn btn-outline-dark btn">Submit</button>
    }
</div>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

<div class="row justify-content-center md-4">
    <div class="col-md-6 text-center">
        @using (Html.BeginForm("Index", "BrowseProducts", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <button type="submit" class="btn btn-outline-dark btn">Back to browse products</button>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
