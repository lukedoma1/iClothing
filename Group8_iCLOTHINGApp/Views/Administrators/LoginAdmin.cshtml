@model Group8_iCLOTHINGApp.Models.Administrator

@{
    ViewBag.Title = "LoginAdmin";
}

<style>
    .custom-button {
        background-color: rgb(230, 246, 247);
        border: none;
        padding: 8px 25px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
        transition-duration: 0.4s;
        margin-top: 20px;
    }

    .custom-button:hover {
        background-color: rgb(184, 218, 219);
    }
</style>

@using (Html.BeginForm("LoginAdmin", "Administrators", FormMethod.Post))
{
    <fieldset>
        <legend>Admin Log In</legend>
        <hr />
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @if (ViewBag.Message != null)
        {
            <p style="border: 1px solid red">
                @ViewBag.Message
            </p>
        }

        <div class="form-group">
            <p>Username</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.adminName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.adminName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Password</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.adminPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.adminPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="custom-button" />
                </div>
            </div>
        </div>

    </fieldset>
}
