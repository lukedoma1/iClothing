@model Group8_iCLOTHINGApp.Models.UserPassword

@{
    ViewBag.Title = "Index";
}

<style>
    .custom-button {
        background-color: rgb(230, 246, 247);
        border: none;
        padding: 8px 25px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
        transition-duration: 0.4s;
        margin-top: 20px;
    }

        .custom-button:hover {
            background-color: rgb(184, 218, 219); 
        }
</style>

@using (Html.BeginForm("Index", "UserPasswords", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Sign Up</legend>


        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p>Username</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.userAccountName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userAccountName, "", new { @class = "text-danger" })
                    @if (ViewData.ModelState.ContainsKey("userAccountName") && ViewData.ModelState["userAccountName"].Errors.Count > 0)
                    {
                        <p class="text-danger">@Html.ValidationMessageFor(model => model.userAccountName)</p>
                    }
                </div>
            </div>



            <div class="form-group">
                <p>Password</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.userEncryptedPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userEncryptedPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sign Up" class="custom-button" />
                </div>
            </div>
        </div>
        </fieldset>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
